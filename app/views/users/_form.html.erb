<%= semantic_form_for(@user, :url => person_user_path(@person)) do |f| %>

  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, :as => :radio, :collection => User::ROLES %>
  <% end %>

  <%= f.buttons %>

<% end %>

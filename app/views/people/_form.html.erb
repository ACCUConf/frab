<%= semantic_form_for(@person) do |f| %>

  <%= f.inputs :name => "Basic" do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :public_name, :hint => "This is the name that will be shown in the public program." %>
    <%= f.input :gender, :collection => Person::GENDERS %>
    <%= f.input :avatar, :hint => "Upload a new picture." %>

    <%= dynamic_association :languages, "Languages spoken", f %>

  <% end %>

  <%= f.inputs :name => "Contact Data" do %>
    <%= f.input :email, :hint => "Please enter the email address that we should use as our main means of contacting you." %>
    <%= f.input :email_public, :hint => "If you like, this email address can be published in our public program." %>

    <%= dynamic_association :phone_numbers, "Phone numbers", f %>

    <%= dynamic_association :im_accounts, "Instant messaging accounts", f %>
    
  <% end %>

  <%= f.inputs :name => "Bio" do %>
    <%= f.input :abstract, :input_html => {:rows => 4}, :hint => "One short paragraph that succinctly describes you." %>
    <%= f.input :description, :hint => "A longer description of yourself. Use this to give additional details that did not fit in the abstract." %>
    
    <%= dynamic_association :links, "Links", f %>
  <% end %>
  
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class => "button"} %>
  <% end %>

<% end %>

<%= block do %>
  <%= content do %>
    <h2>Listing people</h2>

    <%= inner do %>
      <%= render :partial => 'shared/simple_search', :locals => {:path => people_path} %>
      
      <table class="table">
        <tr>
          <th class="first"></th>
          <th>First name</th>
          <th>Last name</th>
          <th>Public name</th>
          <th>Email</th>
          <th class="last"></th>
        </tr>

      <% @people.each do |person| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= image_box person.avatar, :small %></td>
          <td><%= person.first_name %></td>
          <td><%= person.last_name %></td>
          <td><%= person.public_name %></td>
          <td><%= person.email %></td>
          <td class="last">
            <%= link_to 'Show', person %> |
            <%= link_to 'Edit', edit_person_path(person) %> |
            <%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %>
          </td>
        </tr>
      <% end %>
      </table>
      <%= actions_bar do %>
        <%= will_paginate @people %>
      <% end %>

    <% end %>
  <% end %>
<% end %>

<% content_for :sidebar do %>

  <%= actions_block do %>
    <%= action_button "add", "Add person", new_person_path %>
  <% end %>

<% end %>

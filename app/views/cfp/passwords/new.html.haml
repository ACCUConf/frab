= block do
  %h2=t("cfp.forgot_password_headline") 
  = content do
    = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.inputs do
        = f.input :email
      = f.buttons do
        = f.commit_button t("cfp.send_reset_instructions"), :button_html => {:class => "button", :icon => "tick"}
    = link_to t("cfp.back"), :back 

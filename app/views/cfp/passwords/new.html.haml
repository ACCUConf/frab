= block do
  %h2=t("cfp.forgot_password_headline") 
  = content do
    = render "shared/flash", :flash => flash
    = semantic_form_for(@user, :url => cfp_user_password_path, :html => { :method => :post }) do |f|
      = f.inputs do
        = f.input :email
      = f.buttons do
        = f.commit_button t("cfp.send_reset_instructions"), :button_html => {:class => "button", :icon => "tick"}
    = link_to t("cfp.back"), :back 

<%= f.inputs title do %>
  <div id="<%= association_name.to_s %>">
    <%= f.semantic_fields_for association_name do |association_form| %>
      <%= render association_name.to_s.singularize + "_fields", :f => association_form %>
    <% end %>
    <div class="links">
      <%= add_association_link t(:add_association, :name => t("activerecord.models." + association_name.to_s.singularize)), f, association_name %>
    </div>
  </div>
<% end %>

%section
  .page-header
    %h1 Editing People for "#{@event.title}"
  .row
    .span16
      = semantic_form_for(@event) do |f|
        = dynamic_association :event_people, nil, f
        = f.buttons do
          = f.commit_button :button_html => {:class => "btn primary"}
          = link_to "Cancel", :back, :class => "btn"
